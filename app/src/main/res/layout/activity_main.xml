        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Light Up My Life - Debby Boone"
            android:id="@+id/checkBox3"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
